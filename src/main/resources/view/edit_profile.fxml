<!-- edit_profile.fxml -->
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.EditProfileController"
            padding="10">
  <center>
    <VBox spacing="10" alignment="CENTER">
      <TextField fx:id="usernameField" promptText="Username" maxWidth="200"/>
      <PasswordField fx:id="passwordField" promptText="New Password" maxWidth="200"/>
      <TextField fx:id="countryField" promptText="Country" maxWidth="200"/>
      <TextArea fx:id="descriptionField" promptText="Description" maxWidth="300" prefRowCount="4"/>
      <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
      </HBox>
    </VBox>
  </center>
</BorderPane>
