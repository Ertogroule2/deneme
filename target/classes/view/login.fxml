<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.LoginController">
    <VBox spacing="15" alignment="CENTER">
        <Label text="Welcome to Mock Trading App" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <TextField fx:id="usernameField" promptText="Username" maxWidth="200"/>
        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Login" onAction="#handleLogin" />
            <Button text="Register" onAction="#goToRegister" />
        </HBox>
    </VBox>
    <padding><Insets top="30" bottom="30" left="30" right="30"/></padding>
</StackPane>
