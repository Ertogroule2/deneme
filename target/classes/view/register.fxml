<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.RegisterController"
            style="-fx-background-color:#eee; -fx-padding:20;">
  <center>
    <VBox spacing="15" alignment="CENTER">
      <Label text="Register" style="-fx-font-size:24; -fx-font-weight:bold;"/>
      <TextField fx:id="usernameField" promptText="New Username" maxWidth="250"/>
      <PasswordField fx:id="passwordField" promptText="New Password" maxWidth="250"/>
      <!-- confirm password needs fx:id -->
      <PasswordField fx:id="confirmField" promptText="Confirm Password" maxWidth="250"/>
      <Button text="Register" onAction="#handleRegister"/>
      <Button text="Back to Login" onAction="#goToLogin"/>
    </VBox>
  </center>
</BorderPane>
